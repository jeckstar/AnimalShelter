<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_animal_card_animal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@color/greyC2"
    android:clickable="true"
    android:focusable="true"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">


    <TextView
        android:id="@+id/tv_item_walk_kind"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textStyle="bold"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="kind" />

    <TextView
        android:id="@+id/tv_item_walk_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:maxLines="2"
        app:layout_constraintBottom_toBottomOf="@+id/tv_item_walk_kind"
        app:layout_constraintStart_toEndOf="@+id/tv_item_walk_kind"
        app:layout_constraintTop_toTopOf="@+id/tv_item_walk_kind"
        tools:text="name" />

    <TextView
        android:id="@+id/tv_item_walk_volunteer_first_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:maxLines="2"
        app:layout_constraintStart_toStartOf="@+id/tv_item_walk_kind"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_walk_kind"
        tools:text="first_name" />

    <TextView
        android:id="@+id/tv_item_walk_volunteer_last_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:maxLines="2"
        app:layout_constraintBottom_toBottomOf="@+id/tv_item_walk_volunteer_first_name"
        app:layout_constraintEnd_toStartOf="@+id/btn_item_walk_show_route"
        app:layout_constraintStart_toEndOf="@+id/tv_item_walk_volunteer_first_name"
        app:layout_constraintTop_toTopOf="@+id/tv_item_walk_volunteer_first_name"
        app:layout_constraintVertical_bias="0.0"
        tools:text="last_name" />


    <TextView
        android:id="@+id/tv_item_walk_last_walk"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="10dp"
        android:maxLines="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_item_walk_show_route"
        app:layout_constraintStart_toStartOf="@+id/tv_item_walk_volunteer_first_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_walk_volunteer_first_name"
        tools:text="last walk" />


    <Button
        android:id="@+id/btn_item_walk_show_route"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="@string/show_the_route"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>